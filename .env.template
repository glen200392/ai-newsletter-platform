# ============================================================================
# AI Newsletter Platform - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in actual values
# cp env_template.txt .env
# ============================================================================

# Application
APP_ENV=production
DATABASE_URL=postgresql://user:password@localhost:5432/newsletter_db
REDIS_URL=redis://localhost:6379/0

# LLM APIs (choose one or more)
OPENAI_API_KEY=sk-proj-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here
GOOGLE_API_KEY=your-google-key-here

# Email (choose one)
SENDGRID_API_KEY=SG.your-key-here
# or SMTP_HOST=smtp.gmail.com

# Payment (optional)
STRIPE_SECRET_KEY=sk_live_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# Security
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
JWT_SECRET_KEY=change-this-jwt-secret-key

# CORS
ALLOWED_ORIGINS=https://yoursite.com,http://localhost:3000

# Features
ENABLE_PAYMENT=true
ENABLE_ANALYTICS=true
